<div class="celebrities-page">
    <h2>Celebrities</h2>
    <div class="celebrities">{{#each celebritiesFromDb}}
        <div class="block-celebrities">
            <a href="/celebrities/{{this.id}}">{{this.name}}</a>
            <form action="/celebrities/{{id}}/delete" method="POST"><button>Delete</button></form>
            <a href="/celebrities/{{id}}/edit">Edit</a>
        </div>

        {{/each}}
    </div>
</div>