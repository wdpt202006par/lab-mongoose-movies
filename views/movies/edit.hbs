<h2>Edit the movie: {{movie.title}}</h2>
 
<form action="/movies/{{movie.id}}/edit" method="POST">
  <label>
    Title:
    <input type="text" name="title" value="{{movie.title}}" />
  </label>
  
  <label>
    Genre:
    <input type="text" name="genre" value="{{movie.genre}}" />
  </label>
 
  <label>
    Plot
    <textarea name="plot" cols="30" rows="4">{{movie.plot}}</textarea>
  </label>

    <label>
    Cast:
    <select name="cast" multiple>
      {{#each celebrities}}
      <option value="{{id}}" {{#if selected}}selected="selected"{{/if}}>{{cast.name}}</option>
      {{/each}}
    </select>
    </label>
  
  <button>Save changes</button>
</form>