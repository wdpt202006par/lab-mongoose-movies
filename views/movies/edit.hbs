<h2>UPDATE MOVIE</h2>
<form  action="/movies/{{movie.id}}" method="POST">
    <label>
    Title:
    <input type="text" name="title" value="{{movie.title}}">
  </label>
  <label>
    Genre:
    <input type="text" name="genre" value="{{movie.genre}}">
  </label>
  <label>
    Plot:
    <input type="text" name="plot" value="{{movie.plot}}">
  </label>
  Cast:
    <select name="cast" multiple>
      {{#each celebrities}}
        <option value="{{id}}" {{#if selected}}selected="selected"{{/if}}>{{name}}</option>
      {{/each}}
    </select>

  
  
  <button>Update Movie</button>
</form>