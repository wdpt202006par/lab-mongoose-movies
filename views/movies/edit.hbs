<h2>Edit Movie Details</h2>
<form action="/movies/show/{{movie.id}}/edit" method="POST">
	<label for="title">Title</label>
	<input type="text" name="title" value="{{movie.title}}">

	<label for="genre">Genre</label>
	<input type="text" name="genre" value="{{movie.genre}}">

	<label for="plot">Plot</label>
	<input type="text" name="plot" value="{{movie.plot}}">

	<label for="cast">Cast:
		<select name="cast" multiple>
			{{#each celebrities}}
				<option value="{{id}}" {{#if selected}} selected = "selected" {{/if}}>{{name}}</option>
			{{/each}}
		</select>
	</label>

	<button type="submit">Edit movie</button>
</form>