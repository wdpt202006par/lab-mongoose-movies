<form action="/movies" method="POST">
<label>Title:
    <input type="text" name="title">
</label>

<label>Genre:
    <input type="text" name="genre">
</label>

<label>Plot:
    <input type="textarea" name="plot">
</label>
<label>Cast:
    <select name="cast" multiple>
        {{#each celebrities }}
            <option value="{{this.id}}">{{name}}</option>
        {{/each}}
    </select>
</label>
<button>Submit</button>
</form>